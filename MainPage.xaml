                <Label Text="BioBizz Algamic" Grid.Row="1" Grid.Column="1"/>
                <Entry x:Name="BioBizzAlgamicBox" Placeholder="Quantity" Grid.Row="1" Grid.Column="2" Keyboard="Numeric" TextChanged="OnQuantityChanged"/>
